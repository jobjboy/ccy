header.mui-bar-nav {
  padding: 0;
}
#search_model {
  width: 93%;
  margin-left: 6%;
}
#search_model a#btn_back {
  display: inline-block;
  position: absolute;
  left: 0;
  top: 0px;
}
#search_model div.mui-input-row {
  width: 100%;
  margin-left: 0;
  float: none;
}
#search_model #saarch_inpt {
  height: 34px;
  font-size: 12px;
}
#search_model .mui-icon-search {
  line-height: 1.5;
}
div#pullrefresh {
  background: #FFF;
  margin-top: 38px;
}
div#pullrefresh p#null {
  text-align: center;
  padding-top: 20px;
  display: none;
}
div.mui-media-body span {
  font-size: 12px;
  line-height: 18px;
  color: #333;
  height: 18px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 5px;
  display: inline-block;
  display: block;
}
p#pre_lodding {
  text-align: center;
  line-height: 2;
  display: none;
}
p#pre_lodding span {
  display: block;
  margin: 150px auto 0 auto;
}
/*商品列表*/
.pro-sort {
  clear: both;
  margin-top: -2px;
  border-top: 1px solid #E3E3E9;
  background: #F5F5F5;
  height: 40px;
  font-size: 14px;
}
div.weui-flex__item {
  display: inline-block;
  width: 33%;
  float: left;
  text-align: center;
  line-height: 2.7;
}
.pro-sort .weui-flex__item .placeholder {
  height: 40px;
  line-height: 40px;
  position: relative;
  font-size: 14px;
}
.pro-sort .weui-flex__item .placeholder:before {
  content: "";
  height: 20px;
  width: 1px;
  background: #dedede;
  position: absolute;
  left: 0;
  top: 10px;
}
.pro-sort .weui-flex__item:first-child .placeholder:before {
  width: 0;
}
.pro-sort .weui-flex__item .placeholder.NormalCss,
.pro-sort .weui-flex__item .placeholder.asc,
.pro-sort .weui-flex__item .placeholder.desc {
  color: #e21323;
}
.pro-sort .weui-flex__item .placeholder.asc:after {
  content: "";
  border: 4px solid transparent;
  border-top: 4px solid #e21323;
  font-size: 0;
  line-height: 0;
  width: 0;
  height: 0;
  position: absolute;
  right: 20px;
  top: 18px;
}
.pro-sort .weui-flex__item .placeholder.desc:after {
  content: "";
  border: 4px solid transparent;
  border-bottom: 4px solid #e21323;
  font-size: 0;
  line-height: 0;
  width: 0;
  height: 0;
  position: absolute;
  right: 20px;
  top: 14px;
}
